<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tharinduapps.jsreader.Activities.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_activity_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to JavaScript Reader"
        android:textSize="18sp" />

    <Button
        android:id="@+id/loadJSToWebBtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/readJSBtn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Load JS to WebView" />

    <Button
        android:id="@+id/readJSBtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Read JS" />

</RelativeLayout>
